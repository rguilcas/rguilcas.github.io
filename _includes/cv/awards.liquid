{% comment %}
  Unified awards entry renderer for both formats
{% endcomment %}

<ul class="cv-list">
  {% for entry in entries %}
    <li class="cv-item">
      <div class="cv-item-header">
        <div class="cv-item-title-group">
          {% if entry.url %}
            <div class="cv-item-title"><a href="{{ entry.url }}">{{ entry.title }}</a></div>
          {% elsif entry.title %}
            <div class="cv-item-title">{{ entry.title }}</div>
          {% endif %}

          {% if entry.awarder %}
            <div class="cv-item-subtitle">{{ entry.awarder }}</div>
          {% endif %}
        </div>

        {% if entry.date %}
          <div class="cv-item-date">{{ entry.date | split: '-' | first }}</div>
        {% endif %}
      </div>

      {% if entry.location %}
        <div class="cv-item-location">
          <i class="fa-solid fa-location-dot"></i>
          {{ entry.location }}
        </div>
      {% endif %}

      {% if entry.summary %}
        <div class="cv-item-detail">
          {{ entry.summary | markdownify }}
        </div>
      {% endif %}
    </li>
  {% endfor %}
</ul>

